= simple_form_for ([@exercise.pattern, @exercise]), url: url, html: { class: "form-horizontal" } do |f|
  = render 'admin/education/errors', object: @exercise

  .form-group
    .col-lg-10
      = f.input :name
      = f.input :sequence
      = f.input :description, as: :ckeditor, input_html: { ckeditor: {toolbar: 'basic'} }

  %hr
  .form-group
    .col-lg-12
      = f.submit nil, class: "btn btn-primary"
      = link_to t('back'), admin_education_program_level_lesson_pattern_path(@exercise.pattern.lesson.program_level, @exercise.pattern.lesson, @exercise.pattern), class: "btn btn-default"
